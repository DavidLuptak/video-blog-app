<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Video link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <div class="post-title">
            <%= post.title %>
          </div>
        </td>
        <td>
          <div class="post-description">
            <%= post.description %>
          </div>
        </td>
        <td>
          <div class="post-video-link">
            <%= post.video.link %>
          </div>
        </td>
        <td><%= link_to 'Show', post %></td>
        <td>
          <% if can? :update, post %>
            <%= link_to 'Edit', edit_post_path(post) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, post %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <% if can? :create, Post %>
    <%= link_to 'New Post', new_post_path %>
  <% end %>
<% end %>