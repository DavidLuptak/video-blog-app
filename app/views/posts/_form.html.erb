<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, placeholder: 'Set a title', class: 'form-control' %>
  </div>
  <br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, placeholder: 'Write a description', class: 'form-control' %>
  </div>
  <br>
  <div class="form-group">
    <%= f.fields_for :video do |ff| %>
        <div class="form-group">
          <%= ff.label :video_link %><br>
          <%= ff.text_field :link, placeholder: 'Add a video link', class: 'form-control' %>
        </div>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
