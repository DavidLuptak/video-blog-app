<%= form_for [@post, @comment] do |f| %>
    <%= f.hidden_field :parent_id %>
    <div class="form-group">
      <%= f.label :body, "New comment" %><br/>
      <%= f.text_area :body, placeholder: 'Write a comment...', class: 'form-control', required: true %>
    </div>
    <div class="actions">
      <%= f.submit "Add comment" %>
    </div>
<% end %>